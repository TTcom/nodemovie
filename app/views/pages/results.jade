extends ../layout

block content
  .container(style="margin-bottom:80px;")
    .row
         .panel.panel-default
           .panel-heading
             h3 #{keyword}
           .panel-body
             if movies && movies.length>0
               each item in movies
                 .col-md-3
                   .thumbnail
                     a(href="/movie/#{item._id}")
                       if item.poster.indexOf('https') > -1
                         img(src="#{item.poster}",alt="#{item.title}")
                       else
                         img(src="/upload/#{item.poster}",alt="#{item.title}")
                     .caption
                       h3 #{item.title}
                         p.margint10: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片
           ul.pagination  
             - for (var i=0;i<totalPage; i++){
               - if  (currentPage == (i + 1) ) {
                   li.active
                     span #{currentPage}
               - }
               - else{
                    li
                     a(href="/results?#{query}&p=#{i}") #{i+1}              
               - }
             - }		                